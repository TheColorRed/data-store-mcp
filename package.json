{
  "name": "data-store-mcp",
  "displayName": "Data Store MCP",
  "description": "Connect to different data stores using the Model Context Protocol.",
  "version": "1.1.1",
  "publisher": "TheColorRed",
  "keywords": [
    "agent",
    "chat",
    "context",
    "crud",
    "data",
    "graphql",
    "mcp",
    "model",
    "mysql",
    "mssql",
    "postgres",
    "sqlite",
    "store",
    "vscode-extension"
  ],
  "icon": "images/icon.png",
  "type": "module",
  "engines": {
    "vscode": "^1.102.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheColorRed/data-store-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/TheColorRed/data-store-mcp/issues"
  },
  "categories": [
    "AI",
    "Chat",
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "workspaceContains:.vscode/stores.json",
    "workspaceContains:.vscode/*.store.json",
    "workspaceContains:.vscode/connections.json",
    "workspaceContains:.vscode/*.connection.json"
  ],
  "contributes": {
    "jsonValidation": [
      {
        "fileMatch": ".vscode/{connections,stores}.json",
        "url": "./out/schemas/connections.schema.json"
      },
      {
        "fileMatch": ".vscode/*.{connection,store}.json",
        "url": "./out/schemas/connection.schema.json"
      }
    ],
    "commands": [],
    "mcpServerDefinitionProviders": [
      {
        "id": "data-store-mcp",
        "label": "Data Store"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run copy-json",
    "compile": "tsc -p ./",
    "prewatch": "rm -rf out && mkdir out && npm run copy-json",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "watch-json": "chokidar \"src/schemas/**/*.json\" -c \"npm run copy-json\"",
    "copy-json": "cpx \"src/**/*.json\" out"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/mssql": "^9.1.7",
    "@types/node": "22.x",
    "@types/pg": "^8.15.5",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.0",
    "cpx": "^1.5.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "fast-glob": "^3.3.3",
    "graphql": "^16.11.0",
    "mssql": "^11.0.1",
    "mysql2": "^3.14.3",
    "node-sql-parser": "^5.3.10",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.7",
    "zod": "^3.25.76"
  }
}